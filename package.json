{
  "name": "invoicer",
  "version": "1.0.0",
  "description": "online invoice generator",
  "main": "index.js",
  "scripts": {
    "test": "cross-env jest --coverage",
    "server": "nodemon --exec babel-node ./src/server/index.js",
    "build:clean": "rimraf ./{build}",
    "build:server": "babel ./src/server/index.js -d build",
    "build": "npm run build:clean && npm run build:server",
    "start": "npm run build && node build/index.js",
    "client": "npm start --prefix src/client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "lint:staged": "npx lint-staged",
    "format": "prettier --write src/**/*.{js}",
    "format:check": "prettier --check src/**/*.{js}",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "nock": "^13.2.4",
    "nodemailer": "^6.7.3",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.5.1",
    "concurrently": "^7.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  },
  "lint-staged": {
    "!(*test).{js, jsx}": [
      "pretty-quick --staged",
      "npm run lint:fix"
    ]
  }
}
