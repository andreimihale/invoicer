{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": 2,
    "consistent-return": 0,
    "prettier/prettier": "error",
    "quotes": [2, "double", { "avoidEscape": true }],
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "object-curly-newline": 0,
    "operator-linebreak": 0,
    "no-underscore-dangle": 0
  },
  "overrides": [
    {
      "files": ["./src/server/index.js"],
      "rules": {
        "no-console": 0
      }
    }
  ]
}
